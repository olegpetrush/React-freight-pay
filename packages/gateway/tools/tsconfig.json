{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2016", "es2017", "dom", "esnext.asynciterable"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false
  },
  "exclude": ["../build", "./newrelic.js"],
  "include": ["../src/**/*"]
}
